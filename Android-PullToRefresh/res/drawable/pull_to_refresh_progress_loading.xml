<?xml version="1.0" encoding="UTF-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="100"
    android:fromDegrees="0.0"
    android:pivotX="50.0%"
    android:pivotY="50.0%"
    android:toDegrees="360.0" >

    <shape
        android:innerRadiusRatio="3.0"
        android:shape="ring"
        android:thicknessRatio="8.0"
        android:type="sweep"
        android:useLevel="false" >
        <size
            android:height="30.0dip"
            android:width="30.0dip" />

        <gradient
            android:centerColor="#FE9500"
            android:centerY="0.5"
            android:endColor="#D9B27B"
            android:startColor="#E7AC57"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>